<Window x:Class="desktopapp.NieuweFunctie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nieuwe Functie" Height="343" Width="512" WindowStartupLocation="CenterScreen">
    <Grid Background="#48a9e4">
        <TextBox x:Name="txtfunctienaam" HorizontalAlignment="Left" Height="23" Margin="90,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtfunctiebeschrijving" HorizontalAlignment="Left" Height="169" Margin="90,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="379"/>
        <Label Content="Functie:" HorizontalAlignment="Left" Margin="39,45,0,0" VerticalAlignment="Top"/>
        <Label Content="Beschrijving:" HorizontalAlignment="Left" Margin="14,71,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnBevestig" Content="Bevestig" HorizontalAlignment="Left" Margin="157,277,0,0" VerticalAlignment="Top" Width="75" Click="btnBevestig_Click"/>
        <Button x:Name="btnAnnuleer" Content="Annuleer" HorizontalAlignment="Left" Margin="254,277,0,0" VerticalAlignment="Top" Width="75" Click="btnAnnuleer_Click"/>
    </Grid>
</Window>
